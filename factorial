//вычисление факториала числа n рекурсивно:

namespace Задание_1_лаба_3
{
    internal class Program
    {
        static long Factorial(int n)
        {
            if (n == 0)
                return 1;

            return n * Factorial(n - 1);
        }
        static void Main()
        {
            int n = 3;
            long result = Factorial(n);
            Console.WriteLine($"{n}! = {result}");
        }
    }
}



//вычисление факториала числа n итеративно:

namespace Задание_1_лаба_3
{
    internal class Program
    {
        static long Factorial(int n)
        {
            if (n == 0)
                return 1;
            long result = 1;

            for(int i = 2; i <= n; i++)
            {
                result *= i;
            }
            return result;
        }
        static void Main()
        {
            int n = 3;
            long result = Factorial(n);
            Console.WriteLine($"{n}! = {result}");
        }
    }
}
