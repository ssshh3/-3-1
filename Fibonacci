//нахождение n-го числа Фибоначчи рекурсивно:

namespace Задание_1_лаба_3
{
    internal class Program
    {
        static int Fibonacci(int n)
        {

            if (n == 0)
                return 0;
            if (n == 1)
                return 1;

            return Fibonacci(n - 1) + Fibonacci(n - 2);
        }

            static void Main()
            {
                int n = 10;
                int result = Fibonacci(n);
                Console.WriteLine($"{n} число Фибоначчи - {result}");
            }
    }
}


//нахождение n-го числа Фибоначчи итеративно:

namespace Задание_1_лаба_3
{
    internal class Program
    {
        static int Fibonacci(int n)
        {

            if (n == 0)
                return 0;
            if (n == 1)
                return 1;
            int a = 0;
            int b = 1;
            int result = 0;

            for(int i =2; i <= n; i++)
            {
                result = a + b;
                a = b;
                b = result;
            }
            return result;
        }

            static void Main()
            {
                int n = 10;
                int result = Fibonacci(n);
                Console.WriteLine($"{n} число Фибоначчи - {result}");
            }
    }
}
